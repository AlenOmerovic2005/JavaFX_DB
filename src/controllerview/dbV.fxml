<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerview.dbC">
   <center>
      <TableView fx:id="tableView">
         <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="wohnortColumn" text="Wohnort"/>
         </columns>
      </TableView>
   </center>
   <bottom>
      <Button fx:id="refreshButton" text="Refresh" onAction="#refreshData"/>
      <Button fx:id="addButton" text="Add" onAction="#openAddPersonWindow"/>
   </bottom>
</BorderPane>